@using ShopAdmin.Common
@using ShopAdmin.Helper
@{
    USER us = Context.Session.GetObject<USER>(AppConst.UserSession) ?? new USER();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "Hệ thống quản lý")</title>
    <link rel="icon" type="image/x-icon" href="~/Images/logo.jpg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-6.4.0-pro/css/all.css" />
    <link rel="stylesheet" href="~/css/common.css" />
    <link rel="stylesheet" href="~/lib/select2/select2.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-6.4.0-pro/css/all.css">
    <link rel="stylesheet" href="~/lib/others/css/jquery-confirm.css">
    <link rel="stylesheet" href="~/lib/others/css/bootstrap-datetimepicker-2.css">
    <link rel="stylesheet" href="~/lib/others/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-custom.css">
    <link rel="stylesheet" href="~/AdminLTE/plugins/font-awesome/css/font-awesome.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Material+Icons+Outlined">
    <link rel="stylesheet" href="~/lib/custom-drag-drop-file-upload/fileUpload/fileUpload.css">
    <link rel="stylesheet" href="~/ico-tsd-v2/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/validator.css" />
</head>
<body class="mx-vertical hold-transition sidebar-mini">
    <div id="overlay"></div>
    <div id="spinner"></div>
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand bg-ecus navbar-light border-bottom" style="display:flex;">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link color-white"@*  data-widget="pushmenu" *@ href="/">
                        <i class="icon-menu-ico-tsd"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link padleft0px text-uppercase color-white bold" href="/">Quản lý cửa hàng</a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link white" data-toggle="dropdown" href="#">
                        <div class="inline-block white" title="Thông báo"><i class="icon-bell-ico-tsd"></i></div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="border: none!important; margin-top: 3px;">
                        <div class="dropdown-item" style="border-radius:5px;font-size:14px;background-color: #fff!important;padding: .5rem 1rem!important; border-top: 1px solid rgba(0,0,0,.15);">
                            <!-- Message Start -->
                            <div class="media" style="display:block!important;">
                                <div class="text-center mb10">
                                    <div>Thông báo</div>
                                </div>
                            </div>
                            <!-- Message End -->
                        </div>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="icon-questioncircle-ico-tsd white" aria-hidden="true"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link white" data-bs-toggle="dropdown" href="#">
                        <div class="inline-block white" title="@us.HoTen"><i class="icon-user-ico-tsd"></i><span class="ml8 mr8" id="UsFullName">@us.HoTen</span><i class="icon-caretdown-ico-tsd"></i></div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="border: none!important; margin-top: 3px;">
                        <div class="dropdown-item" style="border-radius:5px;font-size:14px;background-color: #fff!important;padding: .5rem 1rem!important; border-top: 1px solid rgba(0,0,0,.15);">
                            <!-- Message Start -->
                            <div class="media" style="display:block!important;">
                                <div class="media-body pos-relative">
                                    <a href="#UserInfo" data-bs-toggle="modal" class="mb10 color-info" style="display:block;font-size:14px"><i class="icon-user-ico-tsd"></i>&nbsp;Thông tin tài khoản</a>
                                    <a href="#ChangePassword" data-bs-toggle="modal" class="mb10 color-info" style="display:block;font-size:14px"><i class="icon-user-ico-tsd"></i>&nbsp;Đổi mật khẩu</a>
                                    <a href="/admin/dang-xuat" class="mb5 color-blue" style="display:block;font-size:14px;color: #005689!important;"><i class="icon-logout-ico-tsd"></i>&nbsp;Đăng xuất</a>
                                </div>
                            </div>
                            <!-- Message End -->
                        </div>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary  elevation-4">
            <!-- Sidebar -->
            <div class="sidebar bg-sidebar layout-fixed" id="menu-sidebar">
                <!-- Sidebar user panel (optional) -->
                @await Html.PartialAsync("LeftSlibar")
                <!-- /.sidebar-menu -->
            </div>
            <div class="Clearfix"></div>
            <div class="text-left" style="background-color: #FFF;bottom:0px;color: #4A525A;font-size:12.5px !important;height:45px;padding: 15px 10px 10px 18px; border-top: 1px solid #E1E2E3 ">
                <i class="icon-menufold-ico-tsd" aria-hidden="true"></i>
                &nbsp;&nbsp;&nbsp;Copyright &copy; @DateTime.Now.Year
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid" style="min-height:500px">
                    @RenderBody()
                    @await Html.PartialAsync("_UserModal")
                    @await Html.PartialAsync("_ChangePassword")
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/others/js/jquery-confirm.js"></script>
    <script src="~/lib/others/js/bootstrap-datetimepicker.min.js" asp-append-version="true"></script>
    @*<script src="Content/lib/others/js/jquery.datetimepicker.full.min.js"></script>*@
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script src="~/js/helper/TableHelper.js" asp-append-version="true"></script>
    <script src="~/js/helper/PageResizeHelper.js" asp-append-version="true"></script>
    <script src="~/js/helper/HandleDataHelper.js" asp-append-version="true"></script>
    <script src="~/js/helper/FormatInputHelper.js" asp-append-version="true"></script>
    <script src="~/js/helper/MessageBoxHelper.js" asp-append-version="true"></script>
    <script src="~/js/helper/AjaxConfigHelper.js" asp-append-version="true"></script>
    <script src="~/js/share/common.js" asp-append-version="true"></script>
    <script src="~/js/share/pagination.js" asp-append-version="true"></script>
    <script src="~/js/share/validator-addmethod.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/dist/js/adminlte.min.js" asp-append-version="true"></script>
    <script src="~/lib/custom-drag-drop-file-upload/fileUpload/fileUpload.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @*<script src="~/lib/Datatables.v1.12.1/datatables.js"></script>
    <script src="~/js/share/DatatableConfig.js"></script>*@

    <script>
        $(document).ready(function () {
            $(document).ajaxStart(function () {
                showOverlay();
                showSpinner();
            });
            $(document).ajaxStop(function () {
                hideOverlay();
                hideSpinner();
            })
        })

        function showSpinner() {
            $('#spinner').show();
        }
        function hideSpinner() {
            $('#spinner').hide();
        }
        function showOverlay() {
            $('#overlay').show();
        }
        function hideOverlay() {
            $('#overlay').hide();
        }
    </script>
</body>
</html>
